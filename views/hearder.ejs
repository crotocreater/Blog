<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="google" content="notranslate">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles/main.css">
  
  <!-- <script src="https://unpkg.com/axios/dist/axios.min.js"></script> -->
</head>

<body>
    <% if(locals.user.username) { %>
      <div class="container header">
        <a href="/" class="newPostBtn" style="background-color: #2ecc71;">Home page</a>
        <div class="top_search">
          <form action="/search" method="post" class="search-form">
            <input type="text" id="inputsearch" name="search" placeholder="search">
            <button type="button" id="search"><i class="fa-solid fa-magnifying-glass"></i></button>
          </form>
        </div>
        <div class="forUser">
          <!-- <a href="/profile" > -->
           <a href="/profile" class="find"> <img class="avatar" src="<%= user.avatar %>" alt="" onclick=""></a>
          <!-- </a> -->
          <a href="/notify" class="a" ><i class="fa fa-bell"></i></a>
        </div>
        
      </div>
    <% } else { %>
      <div class="container header">
        <a href="/" class="newPostBtn a" style="background-color: #2ecc71;">Home page</a>
        <div class="top_search">
        <form action="/search" method="post" class="search-form">
          <input type="text" id="inputsearch" name="search" placeholder="search">
          <button type="button" id="search"><i class="fa-solid fa-magnifying-glass"></i></button>
        </form>
        </div>
        <div class="forUser">
          <a href="/login" class="newPostBtn a" style="background-color: #c2225d;">Login</a>
          <a href="/sign-in" class="newPostBtn a" style="background-color: #138785;">Create one</a>
        </div>
      </div>   
    <% } %>

    <div class="setting">
      <button onclick="night()" id="night"><i class="fa-solid fa-moon"></i></button>
      <button onclick="day()" id="day"><i class="fa-solid fa-sun"></i></button>
    </div>
    <script>
        function night() {
            document.body.classList.add('night-mode');
            document.getElementsByClassName('.container').classList('.btnnight')
            document.body.classList.remove('day-mode');
        }

        function day() {
            document.body.classList.add('day-mode');
            document.getElementById('#day').classList.add('daybtn')
            document.body.classList.remove('night-mode');
        }
    </script>